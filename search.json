---
---
[
    {% for post in site.posts %}
        {
            "title" : "{{ post.title | strip_html | escape }}",
            "url" : "{{ site.baseurl }}{{ post.url }}",
            "description" : "{{post.synopsis | strip_html | strip_newlines | escape }}",
            "tags" : "{{ post.tags | join: ', ' }}",
            "date" : "{{ post.date }}"
        }
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
]